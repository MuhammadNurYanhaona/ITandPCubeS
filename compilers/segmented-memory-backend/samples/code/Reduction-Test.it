Program (args) { 
        rtEnv = new TaskEnvironment(name: "Reduction Test")
        bind_input(rtEnv, "a", args.input_file)
        execute("Reduction Test"; rtEnv; Partition: args.b)
}

Task "Reduction Test":
	Define:
		a: 2D Array of Integer
		result: Integer Reduction
		result_2: Integer
	Environment:
		a: link
	Compute:
		"Reduce" (Space B) {
			do { 
				Space A:result = reduce("max", a[i][j]) 
			} for i, j in a
		}
	Partition(b):
		Space A <un-partitioned> { a }
		Space B <1D> divides Space A partitions {
			a<dim1>: block_size(b)
		} 
